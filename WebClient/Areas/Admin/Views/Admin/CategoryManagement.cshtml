@model IEnumerable<api.Models.Category>

<div class=" card" style=" padding: 15px">
    <h2 class="mb-4">Quản Lý Danh Mục</h2>

    <table id="categoryTable" class="table table-striped table-bordered no-wrap">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.First().CategoryName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>@Html.DisplayNameFor(model => model.First().InfluencerId)</th>
            <th>@Html.DisplayNameFor(model => model.First().BrandId)</th>
            <th></th> <!-- Column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.InfluencerId</td>
                <td>@item.BrandId</td>
                <td>
                        <button type="button" class="btn btn-warning edit-button" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@item.CategoryId"><i class="fas fa-edit"></i>Edit</button>
                        <button type="button" class="btn btn-danger delete-button" data-bs-toggle="modal" data-bs-target="#centeredModalDelete" data-id="@item.CategoryId"> <i class="fas fa-trash-alt"></i> Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoryTable').DataTable();
        });
    </script>

}
