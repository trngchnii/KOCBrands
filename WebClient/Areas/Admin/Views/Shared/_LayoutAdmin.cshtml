<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    "
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables JavaScript -->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <style>
    .main-content {
        padding: 40px;
        background-color: #f4f7fc;
        flex: 1;
        min-height: 100vh;
        transition: margin-left 0.3s ease;
        width: 100%;
    }
 
    .sidebar {
        width: 250px;
        background-color: #474747;
        color: #ffffff;
        padding: 20px;
        box-sizing: border-box;
        height: 1315px;
    }

    .sidebar ul li a:hover, .sidebar ul li a.active {
        background-color: #ff6b01;
    }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-bolt"></i> KOC Brands</h2>
        </div>
        <ul>
            <li>
                <a href="/Admin/Analytics"><i class="fas fa-chart-bar"></i> Thống Kê</a>
            </li>
            <li>
                <a href="/Admin/Dashboard"><i class="fas fa-tachometer-alt"></i> Tổng Quan</a>
            </li>
            <li>
                <a href="/Admin/UserManagement"><i class="fas fa-box"></i> Quản Lý Người Dùng</a>
            </li>
            <li>
                <a href="/Admin/CategoryManagement"><i class="fas fa-box"></i> Quản Lý Danh Mục</a>
            </li>
            <li>
                <a href="/Admin/ProductManagement"><i class="fas fa-box"></i> Quản Lý Sản Phẩm</a>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <div class="topbar">
     
            <div class="topbar-icons">
                <a href="#"><i class="fas fa-bell"></i><span class="badge">4</span></a>
                <a href="Logout"><i class="fas fa-user-circle"></i></a>
            </div>
        </div>
        <div class="content-body">
            @RenderBody()
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)

    @RenderSection("Styles", required: false)
</body>
</html>
