<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
    .main-content {
        padding: 40px;
        background-color: #f4f7fc;
        flex: 1;
        min-height: 100vh;
        transition: margin-left 0.3s ease;
        width: 100%;
    }
 
    .sidebar {
        width: 250px;
        background-color: #474747;
        color: #ffffff;
        padding: 20px;
        box-sizing: border-box;
        height: 1315px;
    }

    .sidebar ul li a:hover, .sidebar ul li a.active {
        background-color: #ff6b01;
    }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-bolt"></i> Spur</h2>
        </div>
        <ul>
            <li>
                <a href="/Admin/Analytics"><i class="fas fa-chart-bar"></i> Analytics</a>
            </li>
            <li>
                <a href="/Admin/Dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            </li>
            <li>
                <a href="/Admin/UserManagement"><i class="fas fa-box"></i> User Management</a>
            </li>
            <li>
                <a href="/Admin/ProductManagement"><i class="fas fa-box"></i> Product Management</a>
            </li>
        </ul>
    </div>
    <div class="main-content">
        <div class="topbar">
            <input type="search" placeholder="Type to search..." />
            <div class="topbar-icons">
                <a href="#"><i class="fas fa-bell"></i><span class="badge">4</span></a>
                <a href="Logout"><i class="fas fa-user-circle"></i></a>
            </div>
        </div>
        <div class="content-body">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Styles", required: false)
</body>
</html>
